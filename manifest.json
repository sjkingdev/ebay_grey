{
    "manifest_version": 3,
    "name": "eBay Background Color Changer",
    "version": "1.0",
    "description": "Changes the background color of eBay pages to #ccc.",
    "permissions": ["activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "48": "icon.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }
  